# ===================================
# LibreChat + Opik Integration
# Environment Configuration
# ===================================

# Copy this file to .env and fill in your values
# cp .env.example .env

# ===================================
# Opik Configuration
# ===================================

# Opik Version
OPIK_VERSION=0.1.10

# Opik API Key (generate in Opik UI after first startup)
# Default key for initial setup - CHANGE IN PRODUCTION!
OPIK_API_KEY=opik-default-key-change-in-production

# Opik JWT Secret (for authentication)
OPIK_JWT_SECRET=opik-jwt-secret-change-in-production

# Opik Project & Workspace
OPIK_PROJECT_NAME=librechat
OPIK_WORKSPACE_NAME=default

# Enable OTEL log export from Opik
ENABLE_OTEL_LOG_EXPORT=true

# ===================================
# LibreChat Configuration
# ===================================

# MongoDB
MONGO_USERNAME=admin
MONGO_PASSWORD=admin123

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-ai-key-here

# Security Keys (generate with: openssl rand -hex 32)
CREDS_KEY=f34be427ebb29de8d88c107a71546019685ed8b241d8f2ed00c3df97ad2566f0
CREDS_IV=e2341419ec3dd3d19b13a1a87fafcbfb
JWT_SECRET=16f8c0ef4a5d391b26034086c628469d3f9f497f08163ab9b40137092f2909ef
JWT_REFRESH_SECRET=eaa5191f2914e30b9387fd84e254e4ba6fc51b4654968a9b0803b456a54b8418

# ===================================
# OpenTelemetry / Observability
# ===================================

# Enable OTEL tracing
ENABLE_OTEL=true

# Debug logging (set to true for troubleshooting)
DEBUG_LOGGING=false
OTEL_LOG_LEVEL=info

# ===================================
# MCP Server Configuration (Optional)
# ===================================

# Uncomment to enable PI System MCP Server

# PI Web API URL
# PI_WEBAPI_URL=https://your-pi-server.com/piwebapi

# PI Authentication
# PI_USERNAME=your-username
# PI_PASSWORD=your-password
# PI_AUTH_METHOD=basic
# PI_VERIFY_SSL=true

# AF Server & Database
# AF_SERVER_NAME=YourAFServer
# AF_DATABASE_NAME=YourDatabase
# DATA_SERVER_NAME=YourDataServer

# ===================================
# RAG Configuration
# ===================================

# Embeddings provider for RAG
EMBEDDINGS_PROVIDER=openai

# Debug RAG API
DEBUG_RAG_API=false

# ===================================
# Advanced Configuration
# ===================================

# CORS Settings (if needed)
# ALLOW_SOCIAL_LOGIN=false
# ALLOW_SOCIAL_REGISTRATION=false

# App Title
# APP_TITLE=LibreChat with Opik

# ===================================
# Quick Start Instructions
# ===================================

# 1. Copy this file:
#    cp .env.example .env

# 2. Add your API keys:
#    - OPENAI_API_KEY
#    - ANTHROPIC_API_KEY (optional)
#    - GOOGLE_API_KEY (optional)

# 3. Generate security keys (optional but recommended):
#    openssl rand -hex 32

# 4. Start Opik:
#    docker compose --profile opik up -d

# 5. Wait ~30 seconds for Opik to initialize, then start LibreChat:
#    docker compose --profile librechat up -d

# 6. Access the services:
#    - LibreChat: http://localhost:3080
#    - Opik UI: http://localhost:5173

# 7. (Optional) Enable MCP Server:
#    docker compose --profile mcp up -d
